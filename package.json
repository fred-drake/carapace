{
  "name": "@carapace/core",
  "version": "0.0.1",
  "private": true,
  "description": "Security-first, plugin-driven personal AI agent framework",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "type-check": "tsc --noEmit -p tsconfig.check.json",
    "lint": "oxlint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run --project unit --passWithNoTests",
    "test:all": "vitest run --passWithNoTests",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --project integration --passWithNoTests",
    "test:security": "vitest run --project security --passWithNoTests",
    "test:e2e": "vitest run --project e2e --passWithNoTests",
    "test:conformance": "vitest run --project conformance --passWithNoTests",
    "test:bench": "vitest bench --config vitest.bench.config.ts",
    "test:bench:ci": "vitest bench --config vitest.bench.config.ts --outputJson bench-results.json"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@vitest/coverage-v8": "^3.0.0",
    "oxlint": "^0.16.0",
    "prettier": "^3.4.0",
    "tsc-alias": "^1.8.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "ajv": "^8.17.0",
    "better-sqlite3": "^11.7.0",
    "smol-toml": "^1.6.0",
    "zeromq": "^6.4.0"
  },
  "packageManager": "pnpm@10.28.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild"
    ]
  }
}
